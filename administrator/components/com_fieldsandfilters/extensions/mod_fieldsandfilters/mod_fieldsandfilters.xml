<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="site" method="upgrade">
        <name>mod_fieldsandfilters</name>
        <creationDate>2013-06-04</creationDate>
        <copyright>Copyright (C) 2012 KES - Kulka Tomasz . All rights reserved.</copyright>
        <license>GNU General Public License version 3 or later; see License.txt</license>
        <author>KES - Kulka Tomasz</author>
        <authorEmail>kes@kextensions.com</authorEmail>
        <authorUrl>http://www.kextensions.com</authorUrl>
        <version>1.0.0</version>
        <description>MOD_FIELDSANDFILTERS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_fieldsandfilters">mod_fieldsandfilters.php</filename>
		<filename>index.html</filename>
		<filename>mod_fieldsandfilters.xml</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_fieldsandfilters.ini</language>
		<language tag="en-GB">language/en-GB.mod_fieldsandfilters.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_fieldsandfilters/models/fields">
				<field
					name="fields_id"
					type="fieldsandfiltersFields"
					modes="values"
					class="inputbox"
					label="MOD_FIELDSANDFILTERS_FIELDS_ID_LBL"
					description="MOD_FIELDSANDFILTERS_FIELDS_ID_DESC"
					required="true"
					input="checkboxes"
					filter="int_array"
				/>
				<field
					name="show_submit"
					type="radio"
					class="btn-group"
					label="MOD_FIELDSANDFILTERS_SHOW_SUBMIT_LBL"
					description="MOD_FIELDSANDFILTERS_SHOW_SUBMIT_DESC"
					default="1"
					filter="int"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
