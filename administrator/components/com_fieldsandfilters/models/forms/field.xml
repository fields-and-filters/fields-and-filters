			class="inputbox input-medium"
			label="COM_FIELDSANDFILTERS_FIELD_FORM_CONTENT_TYPE_ID_LBL"
			description="COM_FIELDSANDFILTERS_FIELD_FORM_CONTENT_TYPE_ID_DESC"
			required="true"
			filter="intval"
		/>
