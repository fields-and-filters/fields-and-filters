<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="fieldsandfiltersExtensions" method="upgrade">
        <name>plg_fieldsandfilters_extensions_content</name>
        <creationDate>2013-06-04</creationDate>
        <copyright>Copyright (C) 2012 KES - Kulka Tomasz . All rights reserved.</copyright>
        <license>GNU General Public License version 3 or later; see License.txt</license>
        <author>KES - Kulka Tomasz</author>
        <authorEmail>kes@kextensions.com</authorEmail>
        <authorUrl>http://www.kextensions.com</authorUrl>
        <version>1.0.0</version>
        <description>PLG_FIELDSANDFILTERS_EXTENSIONS_CONTENT_XML_DESCRIPTION</description>
	
	<scriptfile>content.script.php</scriptfile>
	
	<files>
		<filename plugin="content">content.php</filename>
		<filename>index.html</filename>
		<folder>forms</folder>
		<folder>overrides</folder>
	</files>
	
	<languages>
		<language tag="en-GB">language/en-GB.plg_fieldsandfiltersExtensions_content.ini</language>
		<language tag="en-GB">language/en-GB.plg_fieldsandfiltersExtensions_content.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="site_spacer"
					type="spacer"
					label="PLG_FIELDSANDFILTERS_FORM_LBL_SITE_SPACER"
					description="PLG_FIELDSANDFILTERS_FORM_DESC_SITE_SPACER"
				/>
				<field
					name="use_static_fields"
					type="radio"
					size="1"
					class="btn-group"
					label="PLG_FIELDSANDFILTERS_FORM_LBL_USE_STATIC_FIELDS"
					description="PLG_FIELDSANDFILTERS_FORM_DESC_USE_STATIC_FIELDS"
					default="1"
					filter="intval"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="admin_spacer"
					type="spacer"
					label="PLG_FIELDSANDFILTERS_FORM_LBL_ADMIN_SPACER"
					description="PLG_FIELDSANDFILTERS_FORM_DESC_ADMIN_SPACER"
				/>
				
				<field
					name="show_static_fields"
					type="radio"
					class="btn-group"
					label="PLG_FIELDSANDFILTERS_FORM_LBL_SHOW_STATIC_FIELDS"
					description="PLG_FIELDSANDFILTERS_FORM_LBL_SHOW_STATIC_FIELDS"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
