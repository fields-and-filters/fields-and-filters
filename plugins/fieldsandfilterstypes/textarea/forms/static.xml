<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout
		title="PLG_FAF_ES_TA_FORM_TITLE"
		option="PLG_FAF_ES_TA_FORM_OPTION"
	>
		<message>
			<![CDATA[PLG_FAF_ES_TA_FORM_DESC]]>
		</message>
	</layout>
	
	<group title="PLG_FIELDSANDFILTERS_FORM_GROUP_STATIC_TITLE">
		<message>
			<![CDATA[PLG_FIELDSANDFILTERS_FORM_GROUP_STATIC_DESC]]>
		</message>
	</group>

	<form>
		<!-- Add fields to the properties variables for the plugin type. -->
		<fields name="properties">
			<field
				name="mode"
				type="hidden"
				value="static.text"
			/>
		</fields>
	
		<fields name="values">
			<fieldset name="values">
				<field
					name="data"
					type="editor"
					buttons="true"
					hide="pagebreak,readmore"
					class="inputbox"
					filter="JComponentHelper::filterText"
					labelclass="controls-disabled"
					label="PLG_FAF_TS_TA_FORM_VALUE_DATA_LBL"
					description="PLG_FAF_TS_TA_FORM_VALUE_DATA_DESC"
				/>
			</fieldset>
		</fields>
		
		<!-- Add fields to the parameters object for the plugin type. -->
		<fields name="params">
			<fieldset name="type">
				<field
					name="rows"
					type="text"
					class="inputbox"
					label="PLG_FAF_TS_TA_FORM_DISPLAY_ROWS_LBL"
					description="PLG_FAF_TS_TA_FORM_DISPLAY_ROWS_DESC"
					default="0"
					filter="intval"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="cols"
					type="text"
					class="inputbox"
					label="PLG_FAF_TS_TA_FORM_DISPLAY_COLS_LBL"
					description="PLG_FAF_TS_TA_FORM_DISPLAY_COLS_DESC"
					default="0"
					filter="intval"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="display_editor"
					type="radio"
					class="btn-group"
					label="PLG_FAF_TS_TA_FORM_DISPLAY_EDITOR_LBL"
					description="PLG_FAF_TS_TA_FORM_DISPLAY_EDITOR_DESC"
					default="0"
					filter="intval"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="editor"
					type="plugins"
					folder="editors"
					default=""
					label="PLG_FAF_TS_TA_FORM_EDITOR_LBL"
					description="PLG_FAF_TS_TA_FORM_EDITOR_DESC"
					filter="cmd"
				>
					<option value="">JDEFAULT</option>
				</field>
				<field
					name="field_layout"
					type="fieldsandfiltersPluginLayout"
					mode="static"
					plugin="fieldsandfiltersTypes"
					key="field_type"
					label="PLG_FAF_TS_TA_FORM_FIELD_LAYOUT_LBL"
					description="PLG_FAF_TS_TA_FORM_FIELD_LAYOUT_DESC"
				/>
			</fieldset>
		</fields>
	</form>
</metadata>
