<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout
		title="PLG_FAF_TS_DE_FORM_TITLE"
		option="PLG_FAF_TS_DE_FORM_OPTION"
	>
		<message>
			<![CDATA[PLG_FAF_TS_DE_FORM_DESC]]>
		</message>
	</layout>
	
	<group type="fields" title="PLG_FIELDSANDFILTERS_FORM_GROUP_STATIC_TITLE">
		<message>
			<![CDATA[PLG_FIELDSANDFILTERS_FORM_GROUP_STATIC_DESC]]>
		</message>
	</group>
	
	<form>
		<!-- Add fields to the properties variables for the plugin type. -->
		<fields name="properties">
			<field
				name="mode"
				type="hidden"
				value="static.text"
			/>
		</fields>
		
		<fields name="values">
			<fieldset name="values">
				<field
					name="data"
					type="calendar"
					class="inputbox"
					size="22"
					format="%Y-%m-%d %H:%M:%S"
					filter="user_utc"
					label="PLG_FAF_TS_DE_FORM_VALUE_DATA_LBL"
					description="PLG_FAF_TS_DE_FORM_VALUE_DATA_DESC"
				/>
			</fieldset>
		</fields>
	
		<!-- Add fields to the parameters object for the plugin type. -->
		<fields name="params">
			<fields name="type">
				<fieldset name="type">
					<field
						name="format"
						type="list"
						class="inputbox"
						default="DATE_FORMAT_LC"
						label="PLG_FAF_TS_DE_FORM_FORMAT_LBL"
						description="PLG_FAF_TS_DE_FORM_FORMAT_DESC"
					>
						<option value="DATE_FORMAT_LC">DATE_FORMAT_LC</option>
						<option value="DATE_FORMAT_LC1">DATE_FORMAT_LC1</option>
						<option value="DATE_FORMAT_LC2">DATE_FORMAT_LC2</option>
						<option value="DATE_FORMAT_LC3">DATE_FORMAT_LC3</option>
						<option value="DATE_FORMAT_LC4">DATE_FORMAT_LC4</option>
						<option value="custom">PLG_FAF_TS_DE_CUSTOM</option>
					</field>
					<field
						name="format_custom"
						type="input"
						class="inputbox"
						label="PLG_FAF_TS_DE_FORM_FORMAT_CUSTOM_LBL"
						description="PLG_FAF_TS_DE_FORM_FORMAT_CUSTOM_DESC"
					/>
					<field
						name="field_layout"
						type="fieldsandfiltersPluginLayout"
						layoutFolder="static"
						label="PLG_FAF_TS_DE_FORM_FIELD_LAYOUT_LBL"
						description="PLG_FAF_TS_DE_FORM_FIELD_LAYOUT_DESC"
					/>
				</fieldset>
			</fields>
		</fields>
	</form>
</metadata>