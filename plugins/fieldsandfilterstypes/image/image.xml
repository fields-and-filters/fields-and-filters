<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="fieldsandfilterstypes" method="upgrade">
	<name>plg_fieldsandfilterstypes_image</name>
	<creationDate>2015-01-30</creationDate>
	<copyright>Copyright (C) 2012 KES - Kulka Tomasz . All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see License.txt</license>
	<author>KES - Kulka Tomasz</author>
	<authorEmail>kes@kextensions.com</authorEmail>
	<authorUrl>http://www.kextensions.com</authorUrl>
	<version>1.3.1</version>
	<description>PLG_FIELDSANDFILTERSTYPES_IMAGE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="image">image.php</filename>
		<filename>index.html</filename>
		<filename>License.txt</filename>
		<folder>forms</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.plg_fieldsandfilterstypes_image.ini</language>
		<language tag="en-GB">language/en-GB.plg_fieldsandfilterstypes_image.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field type="spacer" name="image_spacer" label="PLG_FAF_TS_IE_FORM_IMAGE_SPACR_LBL" class="text"/>
				<field name="scale" type="list" label="PLG_FAF_TS_IE_FORM_SCALE" description="PLG_FAF_TS_IE_FORM_SCALE_DESC" filter="intval" default="0">
					<option value="0">PLG_FAF_TS_IE_FORM_NOT_SCALE</option>
					<option value="1">PLG_FAF_TS_IE_FORM_SCALE_FILL</option>
					<option value="2">PLG_FAF_TS_IE_FORM_SCALE_INSIDE</option>
					<option value="3">PLG_FAF_TS_IE_FORM_SCALE_OUTSIDE</option>
					<option value="4">PLG_FAF_TS_IE_FORM_CROP</option>
					<option value="5">PLG_FAF_TS_IE_FORM_CROP_RESIZE</option>
					<option value="6">PLG_FAF_TS_IE_FORM_SCALE_FIT</option>
				</field>

				<field name="width" type="text" label="PLG_FAF_TS_IE_FORM_WIDTH_LBL" description="PLG_FAF_TS_IE_FORM_WIDTH_DESC" filter="intval" default="400"/>

				<field name="height" type="text" label="PLG_FAF_TS_IE_FORM_HEIGHT_LBL" description="PLG_FAF_TS_IE_FORM_HEIGHT_DESC" filter="intval" default="400"/>

				<field name="quality" type="text" label="PLG_FAF_TS_IE_FORM_QUALITY_LBL" description="PLG_FAF_TS_IE_FORM_QUALITY_DESC" filter="intval" default="75"/>

				<field type="spacer" name="thumb_spacer" label="PLG_FAF_TS_IE_FORM_THUMB_SPACR_LBL" class="text"/>

				<field name="scale_thumb" type="list" label="PLG_FAF_TS_IE_FORM_CREATE_THUMB_LBL" description="PLG_FAF_TS_IE_FORM_CREATE_THUMB_DESC" filter="intval" default="0">
					<option value="0">PLG_FAF_TS_IE_FORM_NOT_SCALE</option>
					<option value="1">PLG_FAF_TS_IE_FORM_SCALE_FILL</option>
					<option value="2">PLG_FAF_TS_IE_FORM_SCALE_INSIDE</option>
					<option value="3">PLG_FAF_TS_IE_FORM_SCALE_OUTSIDE</option>
					<option value="4">PLG_FAF_TS_IE_FORM_CROP</option>
					<option value="5">PLG_FAF_TS_IE_FORM_CROP_RESIZE</option>
					<option value="6">PLG_FAF_TS_IE_FORM_SCALE_FIT</option>
				</field>

				<field name="width_thumb" type="text" label="PLG_FAF_TS_IE_FORM_WIDTH_THUMB_LBL" description="PLG_FAF_TS_IE_FORM_WIDTH_THUMB_DESC" filter="intval" default="100"/>

				<field name="height_thumb" type="text" label="PLG_FAF_TS_IE_FORM_HEIGHT_THUMB_LBL" description="PLG_FAF_TS_IE_FORM_HEIGHT_THUMB_DESC" filter="intval" default="100"/>

				<field name="quality_thumb" type="text" label="PLG_FAF_TS_IE_FORM_QUALITY_THUMB_LBL" description="PLG_FAF_TS_IE_FORM_QUALITY_THUMB_DESC" filter="intval" default="75"/>
			</fieldset>
		</fields>
	</config>
</extension>
